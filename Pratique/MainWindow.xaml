<Window x:Class="Pratique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pratique"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Col1-->
        <TextBlock Text="Options du terrain" FontSize="20" TextAlignment="Center" Margin="20"/>
        <Label Content="Branché aux égouts (15$)" VerticalAlignment="Center" Margin="20"/>
        <CheckBox Name="CkBxAvecEgouts" VerticalAlignment="Center"  />
        <Label Content="Prise 20 ampères (10$)" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20"/>
        <CheckBox Name="CkBxAvec20A" VerticalAlignment="Center" HorizontalAlignment="Right" />
        <!--Col2-->
        <TextBlock Grid.Column="1" Text="Estimer le coût" FontSize="20" TextAlignment="Center" Margin="20"/>
        <TextBlock Grid.Column="1" Text="0$" Name="TbCoutEstime" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
        <Button    Grid.Column="1" Content="Terrain sauvage" VerticalAlignment="Center" HorizontalAlignment="Left" Click="OnTerrainSansServiceClick" Margin="20"/>
        <Button    Grid.Column="1" Content="Afficher avec services" VerticalAlignment="Center" HorizontalAlignment="Right" Click="OnTerrainAvecServicesClick" Margin="20"/>
    </Grid>
</Window>
